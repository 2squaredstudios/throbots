{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "program": "${workspaceFolder}/server.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "args": ["25500", "60", "world.json"]
        },
        {
            "type": "nwjs",
            "request": "launch",
            "name": "Launch Client",
            "nwjsVersion": "any",
            "webRoot": "${workspaceFolder}",
            "reloadAfterAttached": true
        }
    ]
}